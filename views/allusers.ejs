<% } %>

            <div class="header_fixed  table-move">
                <% if (users != '' ) { %>
                <table class="table text-center my-3">
                    <thead>
                        <tr>
                            <th>S No.</th>
                            <th>Image</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Phone </th>
                            <th>Location </th>
                            <th>Date </th>

                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user, index) => { %>
                          <tr>
                            <td><%= index %></td>
                            <td><img src="<%= user.image %>" alt="User Image"></td>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td><%= user.location %></td>
                            <td><%= user.date %></td>
                            
                            <td>
                                <button onclick="deleteUser('<%= user._id %>')">
                                    <a href="/allusers" class="delete-btn" style="text-decoration: none; color: white;">Delete</a>
                                </button>
                            </td>
                             
                            
                        </tr>
                        <% }); %>
                        
                      </tbody>
                </table>
