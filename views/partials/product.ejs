<div class="container" style="margin-top: 15%;">
  <!-- Sort by Dropdown -->

  <div class="d-flex justify-content-end mb-2">
    <lu class="py-2 m-y-n">sorted by</lu>
    <select class="form-select w-auto " id="sortByAge">
      <option selected>price</option>
      <option value="young-old">Young to Old</option>
      <option value="old-young">Old to Young</option>
    </select>
  </div>
</div>


<!--card group-->
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="filter-by my-5">
        <h6>FILTER BY :</h6>
        <div class="filter-header" data-bs-toggle="collapse" data-bs-target="#filter-price">
          <span class="filter-title">Price</span>
          <i class="fas fa-plus"></i>
        </div>
        <div id="filter-price" class="collapse filter-content">
          <!-- Price filter content goes here -->
        </div>

        <div class="filter-header" data-bs-toggle="collapse" data-bs-target="#filter-size">
          <span class="filter-title">size</span>
          <i class="fas fa-plus"></i>
        </div>
        <div id="filter-age" class="collapse filter-content">
          <!-- Age filter content goes here -->
        </div>

        <div class="filter-header" data-bs-toggle="collapse" data-bs-target="#filter-city">
          <span class="filter-title">city</span>
          <i class="fas fa-plus"></i>
        </div>
        <div id="filter-brand" class="collapse filter-content">
          <!-- Brand filter content goes here -->
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="row">
        <% products.forEach(product => { %>
          <div class="col-lg-4 col-md-6 col-sm-12 mb-5">
            <div class="card" style="border: none;padding:15px; text-align: left; line-height:1ch;" >
              <a href="/productpage/productpage/<%= product._id %>">
                <img src="/uploads/<%= product.src %>" class="card-img-top"  style="height: 250px; object-fit: cover;">
            </a>  
              <div class="card-body">
                <h5 class="card-title"><%= product.title %></h5>
                <p class="card-text"><%= product.brand %></p>
                <p class="card-price">$<%= product.price.toFixed(2) %></p>
              </div>
            </div> 
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>
