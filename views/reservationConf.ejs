<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Reservation Confirmation Page</title>
    <!--icon bootstrap    -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="/css/styles-profile.css">
    <link href="/css/navbar.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/styleReservation&Calendar.css">
</head>

<body>
    <% if (typeof reserveMessage !=='undefined') { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= reserveMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <%-include('../views/partials/search.ejs')-%>
    <%-include('../views/partials/navbar.ejs')-%>
            <div class="container mt-5">
                <form class="FORM custom-form" action="/resconf" method="POST">
                    <div class="mb-3">
                        <label for="Name" class="label">Name:</label>
                        <input type="text" id="Name" name="name" class="InB form-control">
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="label">Email Address:</label>
                        <input type="text" id="Email" name="email" class="InB form-control">
                    </div>
                    <div class="mb-3">
                        <label for="Location" class="label">Location:</label>
                        <input type="text" id="Location" name="location" class="InB form-control">
                    </div>
                    <div class="mb-3">
                        <label for="Phone" class="label">Phone:</label>
                        <input type="text" id="Phone" name="phone" class="InB form-control">
                    </div>
                    <button class="BR btn btn-primary" type="submit">Reservation Confirmation</button>
                </form>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>